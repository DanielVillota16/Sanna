<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"
        tools:context=".addProductActivity">

        <TextView
            android:id="@+id/TVTitleAgregarPInventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Agregar Nuevo Producto"
            android:textColor="#4FD1CA"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/addProductInventoryImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVTitleAgregarPInventario"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/NameProductInventoryET"
            android:layout_width="345dp"
            android:layout_height="39dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/edittextbackgraund"
            android:ems="10"
            android:hint="Nombre del Producto"
            android:paddingHorizontal="10dp"
            android:inputType="textPersonName"
            android:textColorHint="#6F6F6F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addProductInventoryImg" />

        <EditText
            android:id="@+id/DescriptionProdInvET"
            android:layout_width="345dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextbackgraund"
            android:ems="10"
            android:gravity="start|top"
            android:hint="DescriciÃ³n del Producto"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:inputType="textMultiLine"
            android:textColorHint="#6F6F6F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ValorProdInventarioET" />

        <Button
            android:id="@+id/cancelAddProductbutton"
            android:layout_width="148dp"
            android:layout_height="47dp"
            android:background="@drawable/cancelbutoonbackgraund"
            android:text="cancelar"
            android:textColor="#4FD1CA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/CreateProductButton"
            app:layout_constraintTop_toBottomOf="@+id/DescriptionProdInvET"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/CreateProductButton"
            android:layout_width="148dp"
            android:layout_height="47dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/buttonstyles"
            android:text="Agregar "
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelAddProductbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DescriptionProdInvET"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/ValorProdInventarioET"
            android:layout_width="345dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittextbackgraund"
            android:ems="10"
            android:hint="Ingrese el valor del producto"
            android:paddingHorizontal="10dp"
            android:inputType="numberDecimal"
            android:textColorHint="#6F6F6F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NameProductInventoryET" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>